{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}