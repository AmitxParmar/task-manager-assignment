{
  "name": "collaboration-task-manager",
  "version": "1.0.0",
  "description": "collaboration task manager assignment.",
  "main": "./dist/index.cjs",
  "type": "module",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "prebuild": "pnpm run clean:build",
    "build": "pnpm run prisma:generate && pkgroll",
    "start": "cross-env FORCE_COLOR=2 node ./dist/index.cjs",
    "dev": "pnpm run prisma:generate && cross-env NODE_ENV=development tsx watch src/index.ts",
    "prod": "pnpm run build && pnpm run start",
    "clean": "rm -rf node_modules coverage dist .nyc_output",
    "clean:build": "rm -rf dist",
    "lint": "eslint --ignore-path .eslintignore ./ --ext .ts,.js",
    "lint:fix": "eslint --ignore-path .eslintignore ./ --fix --ext .ts,.js",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(ts|js)\"",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:seed": "npx prisma db seed",
    "prisma:studio": "npx prisma studio",
    "check:types": "tsc --noEmit",
    "commit": "git-cz",
    "test": "jest",
    "test:e2e": "jest -c jest.config.e2e.ts",
    "test:integration": "jest -c jest.config.integration.ts",
    "test:unit": "jest -c jest.config.unit.ts --detectOpenHandles"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "author": "amit parmar",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": "",
  "keywords": [
    "NodeJS",
    "TypeScript",
    "express",
    "prisma"
  ],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "envalid": "^8.1.1",
    "express": "^5.2.1",
    "express-jsdoc-swagger": "^1.8.0",
    "express-jwt": "^8.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "jwk-to-pem": "^2.0.7",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.1",
    "nocache": "^4.0.0",
    "nodemon": "^3.1.11",
    "socket.io": "^4.8.1",
    "tsx": "^4.21.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@faker-js/faker": "^10.1.0",
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.15.5",
    "@swc/helpers": "^0.5.17",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/superagent": "8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "chalk": "5.6.2",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-love": "^140.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "is-ci": "^4.1.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "morgan": "^1.10.0",
    "node-notifier": "^10.0.1",
    "pkgroll": "^2.21.4",
    "prettier": "^3.7.4",
    "prisma": "^6.19.1",
    "ts-jest": "^29.4.6",
    "ts-jest-mock-import-meta": "^1.3.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "fsevents": "2.3.3"
  }
}